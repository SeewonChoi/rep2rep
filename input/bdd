typeSystem bdd = 
    types 0, 1, _:var, _:bddTree       
    order 0 < bddTree,
          1 < bddTree,
          var < bddTree
    
conSpec bddG:bdd = 
    constructors
        flip : [bddTree] -> bddTree,
        addNodes : [bddTree] -> bddTree,
        addNode : [var,bddTree] -> bddTree,
        replace0 : [bddTree,bddTree] -> bddTree,
        replace1 : [bddTree,bddTree] -> bddTree,
        removeDup : [bddTree] -> bddTree
    